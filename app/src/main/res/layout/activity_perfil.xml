<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:background="#1A1A2E" tools:context=".PerfilActivity">
    <LinearLayout android:id="@+id/main" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
        <!--  Contenido del perfil con scroll  -->
        <ScrollView android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:fillViewport="true">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="24dp" android:gravity="center_horizontal">
                <!--  Icono de usuario  -->
                <ImageView android:layout_width="120dp" android:layout_height="120dp" android:src="@drawable/perfil" android:layout_marginTop="100dp" android:layout_marginBottom="16dp" android:contentDescription="Icono de perfil"/>
                <!--  Nombre del usuario  -->
                <TextView android:id="@+id/txtNombreUsuario" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="NOMBRE USUARIO" android:textColor="#F3C023" android:textSize="28sp" android:textStyle="bold" android:fontFamily="sans-serif-black" android:layout_marginBottom="8dp"/>
                <!--  Email del usuario  -->
                <TextView android:id="@+id/txtEmailUsuario" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="email@example.com" android:textColor="#F5F5F5" android:textSize="16sp" android:fontFamily="sans-serif" android:layout_marginBottom="48dp"/>
                <!--  Card de estad铆sticas  -->
                <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="32dp" app:cardBackgroundColor="#0F3460" app:cardCornerRadius="0dp" app:cardElevation="4dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ESTADSTICAS" android:textColor="#F3C023" android:textSize="18sp" android:textStyle="bold" android:fontFamily="sans-serif-medium" android:layout_marginBottom="16dp"/>
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="8dp">
                            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Total Partidas:" android:textColor="#F5F5F5" android:textSize="16sp" android:fontFamily="sans-serif"/>
                            <TextView android:id="@+id/txtTotalPartidas" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:textColor="#F3C023" android:textSize="20sp" android:textStyle="bold" android:fontFamily="sans-serif-medium"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
                            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Mejor Puntuaci贸n:" android:textColor="#F5F5F5" android:textSize="16sp" android:fontFamily="sans-serif"/>
                            <TextView android:id="@+id/txtMejorPuntuacion" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0%" android:textColor="#F3C023" android:textSize="20sp" android:textStyle="bold" android:fontFamily="sans-serif-medium"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--  CONFIGURACIN  -->
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="CONFIGURACIN" android:textColor="#F3C023" android:textSize="20sp" android:textStyle="bold" android:fontFamily="sans-serif-black" android:layout_marginBottom="16dp"/>
                <!--  Card de configuraci贸n  -->
                <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="24dp" app:cardBackgroundColor="#0F3460" app:cardCornerRadius="0dp" app:cardElevation="4dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">
                        <!--  Switch Sonidos  -->
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="16dp">
                            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text=" Sonidos" android:textColor="#F5F5F5" android:textSize="16sp" android:fontFamily="sans-serif-medium"/>
                            <Switch android:id="@+id/switchSonidos" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:thumbTint="#F3C023" android:trackTint="#1A1A2E"/>
                        </LinearLayout>
                        <!--  Switch Vibraci贸n  -->
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="16dp">
                            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text=" Vibraci贸n" android:textColor="#F5F5F5" android:textSize="16sp" android:fontFamily="sans-serif-medium"/>
                            <Switch android:id="@+id/switchVibracion" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:thumbTint="#F3C023" android:trackTint="#1A1A2E"/>
                        </LinearLayout>
                        <!--  Switch Notificaciones  -->
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
                            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text=" Notificaciones" android:textColor="#F5F5F5" android:textSize="16sp" android:fontFamily="sans-serif-medium"/>
                            <Switch android:id="@+id/switchNotificaciones" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:thumbTint="#F3C023" android:trackTint="#1A1A2E"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--  Botones de acci贸n  -->
                <Button android:id="@+id/btnVolver" android:layout_width="match_parent" android:layout_height="55dp" android:text="VOLVER" android:textColor="#1A1A2E" android:textSize="16sp" android:textStyle="bold" android:background="#F3C023" android:layout_marginBottom="12dp" android:fontFamily="sans-serif-black"/>
                <Button android:id="@+id/btnCerrarSesion" android:layout_width="match_parent" android:layout_height="55dp" android:text="CERRAR SESIN" android:textColor="#F5F5F5" android:textSize="16sp" android:textStyle="bold" android:background="#E94560" android:fontFamily="sans-serif-black"/>
            </LinearLayout>
        </ScrollView>
        <!--  Barra inferior de navegaci贸n  -->
        <LinearLayout android:id="@+id/bottomNav" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:background="#E94560" android:padding="8dp" android:paddingBottom="56dp" android:gravity="center">
            <Button android:id="@+id/btnAddQuestion" android:layout_width="0dp" android:layout_height="50dp" android:layout_weight="1" android:layout_margin="4dp" android:text="A帽adir" android:textColor="#F5F5F5" android:textSize="11sp" android:textStyle="bold" android:background="#0F3460" android:fontFamily="sans-serif-medium"/>
            <Button android:id="@+id/btnFacil" android:layout_width="0dp" android:layout_height="50dp" android:layout_weight="1" android:layout_margin="4dp" android:text="F谩cil" android:textColor="#1A1A2E" android:textSize="11sp" android:textStyle="bold" android:background="#F3C023" android:fontFamily="sans-serif-medium"/>
            <Button android:id="@+id/btnMedio" android:layout_width="0dp" android:layout_height="50dp" android:layout_weight="1" android:layout_margin="4dp" android:text="Medio" android:textColor="#1A1A2E" android:textSize="11sp" android:textStyle="bold" android:background="#F3C023" android:fontFamily="sans-serif-medium"/>
            <Button android:id="@+id/btnDificil" android:layout_width="0dp" android:layout_height="50dp" android:layout_weight="1" android:layout_margin="4dp" android:text="Dif铆cil" android:textColor="#1A1A2E" android:textSize="11sp" android:textStyle="bold" android:background="#F3C023" android:fontFamily="sans-serif-medium"/>
            <Button android:id="@+id/btnStats" android:layout_width="0dp" android:layout_height="50dp" android:layout_weight="1" android:layout_margin="4dp" android:text="Stats" android:textColor="#F5F5F5" android:textSize="11sp" android:textStyle="bold" android:background="#0F3460" android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>