<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E"
    tools:context=".ListaActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Icono de perfil en la esquina superior izquierda -->
        <ImageView
            android:id="@+id/btnIconoPerfil"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/perfil"
            android:layout_gravity="start|top"
            android:layout_marginStart="16dp"
            android:layout_marginTop="48dp"
            android:contentDescription="Icono de perfil"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <!-- Título -->
        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LISTA DE\nPREGUNTAS"
            android:textColor="#F5F5F5"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Texto informativo si no hay preguntas -->
        <TextView
            android:id="@+id/txtSinPreguntas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No hay preguntas disponibles"
            android:textColor="#F5F5F5"
            android:textSize="16sp"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:layout_marginTop="24dp"
            android:visibility="gone" />

        <!-- Después del título, antes del RecyclerView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnFiltroTodas"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Todas"
                android:textSize="12sp"
                android:background="#0F3460"
                android:textColor="#F5F5F5" />

            <Button
                android:id="@+id/btnFiltroFacil"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Fácil"
                android:textSize="12sp"
                android:background="#F3C023"
                android:textColor="#1A1A2E" />

            <Button
                android:id="@+id/btnFiltroMedio"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Medio"
                android:textSize="12sp"
                android:background="#F3C023"
                android:textColor="#1A1A2E" />

            <Button
                android:id="@+id/btnFiltroDificil"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Difícil"
                android:textSize="12sp"
                android:background="#F3C023"
                android:textColor="#1A1A2E" />
        </LinearLayout>

        <!-- RecyclerView para listar preguntas -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewLista"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:clipToPadding="false" />

        <!-- Barra inferior de navegación -->
        <LinearLayout
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#E94560"
            android:padding="8dp"
            android:paddingBottom="56dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnAddQuestion"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Añadir"
                android:textColor="#F5F5F5"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="#0F3460"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/btnFacil"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Fácil"
                android:textColor="#1A1A2E"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="#F3C023"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/btnMedio"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Medio"
                android:textColor="#1A1A2E"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="#F3C023"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/btnDificil"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Difícil"
                android:textColor="#1A1A2E"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="#F3C023"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/btnStats"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Stats"
                android:textColor="#F5F5F5"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="#0F3460"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>