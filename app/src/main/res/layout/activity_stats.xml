<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Contenedor principal con scroll -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomNav"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Título -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="115dp"
                    android:layout_marginBottom="48dp"
                    android:fontFamily="sans-serif-black"
                    android:letterSpacing="0.05"
                    android:text="ESTADÍSTICAS"
                    android:textColor="#F5F5F5"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <!-- Total Partidas -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="TOTAL PARTIDAS"
                    android:textColor="#F5F5F5"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTotalPartidas"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="32dp"
                    android:background="#F3C023"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="150"
                    android:textColor="#1A1A2E"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Mejor Puntuación -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="MEJOR PUNTUACIÓN"
                    android:textColor="#F5F5F5"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMejorPuntuacion"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="32dp"
                    android:background="#F3C023"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="95"
                    android:textColor="#1A1A2E"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Peor Puntuación -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="PEOR PUNTUACIÓN"
                    android:textColor="#F5F5F5"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPeorPuntuacion"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="32dp"
                    android:background="#F3C023"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="75"
                    android:textColor="#1A1A2E"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Última Puntuación -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="ÚLTIMA PUNTUACIÓN"
                    android:textColor="#F5F5F5"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvUltimaPuntuacion"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="32dp"
                    android:background="#F3C023"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="60%"
                    android:textColor="#1A1A2E"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </ScrollView>

        <!-- Barra inferior de navegación -->
        <LinearLayout
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="#E94560"
            android:padding="8dp"
            android:paddingBottom="56dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnAddQuestion"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Añadir"
                android:textColor="#F5F5F5"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="#0F3460"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/btnFacil"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Fácil"
                android:textColor="#1A1A2E"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="#F3C023"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/btnMedio"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Medio"
                android:textColor="#1A1A2E"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="#F3C023"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/btnDificil"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Difícil"
                android:textColor="#1A1A2E"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="#F3C023"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/btnStats"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Stats"
                android:textColor="#F5F5F5"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="#0F3460"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

    </RelativeLayout>

    <!-- Icono de perfil en la esquina superior izquierda -->
    <ImageView
        android:id="@+id/btnIconoPerfil"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/perfil"
        android:layout_gravity="start|top"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:contentDescription="Icono de perfil"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless" />

</FrameLayout>