<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="#F3C023"
    app:cardCornerRadius="0dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Texto de la pregunta -->
        <TextView
            android:id="@+id/txtPregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PREGUNTA"
            android:textColor="#1A1A2E"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="sans-serif-black"
            android:layout_marginBottom="8dp" />

        <!-- Grupo de opciones con RadioButtons -->
        <RadioGroup
            android:id="@+id/opcionesGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/opcion1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opci贸n 1"
                android:textColor="#1A1A2E"
                android:textSize="14sp"
                android:buttonTint="#1A1A2E"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <RadioButton
                android:id="@+id/opcion2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opci贸n 2"
                android:textColor="#1A1A2E"
                android:textSize="14sp"
                android:buttonTint="#1A1A2E"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <RadioButton
                android:id="@+id/opcion3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opci贸n 3"
                android:textColor="#1A1A2E"
                android:textSize="14sp"
                android:buttonTint="#1A1A2E"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <RadioButton
                android:id="@+id/opcion4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opci贸n 4"
                android:textColor="#1A1A2E"
                android:textSize="14sp"
                android:buttonTint="#1A1A2E"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />
        </RadioGroup>

    </LinearLayout>

</androidx.cardview.widget.CardView>