<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- LAYOUT DE CARGA -->
        <LinearLayout
            android:id="@+id/layoutCargando"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="visible">

            <ProgressBar
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:indeterminateTint="#F3C023" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cargando preguntas..."
                android:textColor="#F5F5F5"
                android:textSize="20sp"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- LAYOUT DEL JUEGO -->
        <LinearLayout
            android:id="@+id/layoutJuego"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <!-- Header con progreso y puntuación -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/tvPreguntaNumero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pregunta 1 de 10"
                    android:textColor="#F3C023"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/tvPuntuacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Puntuación: 0"
                    android:textColor="#F5F5F5"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif" />

                <ProgressBar
                    android:id="@+id/progressBarJuego"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="16dp"
                    android:max="10"
                    android:progress="0"
                    android:progressTint="#F3C023"
                    android:progressBackgroundTint="#0F3460" />
            </LinearLayout>

            <!-- Card de la pregunta -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardBackgroundColor="#0F3460"
                app:cardCornerRadius="0dp"
                app:cardElevation="8dp">

                <TextView
                    android:id="@+id/tvPregunta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¿Pregunta de ejemplo?"
                    android:textColor="#F5F5F5"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:padding="24dp"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:minHeight="150dp" />
            </androidx.cardview.widget.CardView>

            <!-- RadioGroup con las opciones -->
            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rbOpcion1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Opción 1"
                    android:textColor="#F5F5F5"
                    android:textSize="18sp"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/radio_button_background"
                    android:buttonTint="#F3C023"
                    android:fontFamily="sans-serif" />

                <RadioButton
                    android:id="@+id/rbOpcion2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Opción 2"
                    android:textColor="#F5F5F5"
                    android:textSize="18sp"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/radio_button_background"
                    android:buttonTint="#F3C023"
                    android:fontFamily="sans-serif" />

                <RadioButton
                    android:id="@+id/rbOpcion3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Opción 3"
                    android:textColor="#F5F5F5"
                    android:textSize="18sp"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/radio_button_background"
                    android:buttonTint="#F3C023"
                    android:fontFamily="sans-serif" />

                <RadioButton
                    android:id="@+id/rbOpcion4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Opción 4"
                    android:textColor="#F5F5F5"
                    android:textSize="18sp"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/radio_button_background"
                    android:buttonTint="#F3C023"
                    android:fontFamily="sans-serif" />
            </RadioGroup>

            <Button
                android:id="@+id/btnConfirmar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="CONFIRMAR RESPUESTA"
                android:textColor="#F5F5F5"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="#E94560"
                android:layout_marginTop="24dp"
                android:enabled="false"
                android:fontFamily="sans-serif-black" />

        </LinearLayout>

        <!-- LAYOUT DE RESULTADOS -->
        <ScrollView
            android:id="@+id/layoutResultados"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¡PARTIDA FINALIZADA!"
                    android:textColor="#F3C023"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="32dp" />

                <!-- Card de puntuación final -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardBackgroundColor="#F3C023"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="32dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PUNTUACIÓN FINAL"
                            android:textColor="#1A1A2E"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:id="@+id/tvPuntuacionFinal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#1A1A2E"
                            android:textSize="72sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="puntos"
                            android:textColor="#1A1A2E"
                            android:textSize="20sp"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Aciertos y Fallos -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="24dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        app:cardBackgroundColor="#4CAF50"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvAciertos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Aciertos: 0"
                                android:textColor="#F5F5F5"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        app:cardBackgroundColor="#F44336"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvFallos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fallos: 0"
                                android:textColor="#F5F5F5"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Comparación con mejor puntuación -->
                <TextView
                    android:id="@+id/tvComparacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#F3C023"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="32dp"
                    android:fontFamily="sans-serif-medium" />

                <!-- Botón Ver Estadísticas -->
                <Button
                    android:id="@+id/btnVerEstadisticas"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="VER ESTADÍSTICAS"
                    android:textColor="#F5F5F5"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="#0F3460"
                    android:fontFamily="sans-serif-black" />

            </LinearLayout>
        </ScrollView>

        <!-- Barra inferior de navegación -->
        <LinearLayout
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#E94560"
            android:padding="8dp"
            android:paddingBottom="56dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnAddQuestion"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Añadir"
                android:textColor="#F5F5F5"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="#0F3460"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/btnFacil"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Fácil"
                android:textColor="#1A1A2E"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="#F3C023"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/btnMedio"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Medio"
                android:textColor="#1A1A2E"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="#F3C023"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/btnDificil"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Difícil"
                android:textColor="#1A1A2E"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="#F3C023"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/btnStats"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Stats"
                android:textColor="#F5F5F5"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="#0F3460"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

    </LinearLayout>

    <!-- Icono de perfil en la esquina superior izquierda -->
    <ImageView
        android:id="@+id/btnIconoPerfil"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/perfil"
        android:layout_gravity="start|top"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:contentDescription="Icono de perfil"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless" />

</FrameLayout>