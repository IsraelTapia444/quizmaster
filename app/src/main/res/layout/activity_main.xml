<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Icono de perfil en la esquina superior izquierda -->
        <ImageView
            android:id="@+id/btnIconoPerfil"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/perfil"
            android:layout_gravity="start|top"
            android:layout_marginStart="16dp"
            android:layout_marginTop="48dp"
            android:contentDescription="Icono de perfil"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

    <!-- Título Dificultad -->
    <TextView
        android:id="@+id/txtTituloDificultad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DIFICULTAD\nDIFICIL"
        android:textColor="#F5F5F5"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="16dp" />

    <!-- RecyclerView para las preguntas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPreguntas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:clipToPadding="false" />

    <!-- Botón ENVIAR -->
    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENVIAR"
        android:textColor="#F5F5F5"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="#E94560"
        android:fontFamily="sans-serif-black"
        android:paddingStart="48dp"
        android:paddingEnd="48dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />


    <!-- Barra inferior de navegación -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E94560"
        android:padding="8dp"
        android:paddingBottom="56dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnAddQuestion"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Añadir"
            android:textColor="#F5F5F5"
            android:textSize="11sp"
            android:textStyle="bold"
            android:background="#0F3460"
            android:fontFamily="sans-serif-medium" />

        <Button
            android:id="@+id/btnFacil"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Fácil"
            android:textColor="#1A1A2E"
            android:textSize="11sp"
            android:textStyle="bold"
            android:background="#F3C023"
            android:fontFamily="sans-serif-medium" />

        <Button
            android:id="@+id/btnMedio"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Medio"
            android:textColor="#1A1A2E"
            android:textSize="11sp"
            android:textStyle="bold"
            android:background="#F3C023"
            android:fontFamily="sans-serif-medium" />

        <Button
            android:id="@+id/btnDificil"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Difícil"
            android:textColor="#1A1A2E"
            android:textSize="11sp"
            android:textStyle="bold"
            android:background="#F3C023"
            android:fontFamily="sans-serif-medium" />

        <Button
            android:id="@+id/btnStats"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Stats"
            android:textColor="#F5F5F5"
            android:textSize="11sp"
            android:textStyle="bold"
            android:background="#0F3460"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>


    </LinearLayout>
</FrameLayout>