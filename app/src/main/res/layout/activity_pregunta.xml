<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E">

    <!-- Icono de perfil en la esquina superior izquierda -->
    <ImageView
        android:id="@+id/btnIconoPerfil"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/perfil"
        android:layout_gravity="start|top"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:contentDescription="Icono de perfil"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Contenedor principal con scroll -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomNav"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Título -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AÑADIR PREGUNTA"
                    android:textColor="#F5F5F5"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-black"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="32dp"
                    android:layout_marginTop="115dp"/>

                <!-- Campo Pregunta -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PREGUNTA"
                    android:textColor="#F5F5F5"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etPregunta"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#F5F5F5"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="#1A1A2E"
                    android:textSize="14sp"
                    android:hint="Escribe la pregunta"
                    android:textColorHint="#80000000"
                    android:layout_marginBottom="24dp" />

                <!-- Campo Opción 1 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OPCION 1"
                    android:textColor="#F5F5F5"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etOpcion1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#F5F5F5"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="#1A1A2E"
                    android:textSize="14sp"
                    android:hint="Escribe la opción 1"
                    android:textColorHint="#80000000"
                    android:layout_marginBottom="24dp" />

                <!-- Campo Opción 2 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OPCION 2"
                    android:textColor="#F5F5F5"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etOpcion2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#F5F5F5"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="#1A1A2E"
                    android:textSize="14sp"
                    android:hint="Escribe la opción 2"
                    android:textColorHint="#80000000"
                    android:layout_marginBottom="24dp" />

                <!-- Campo Opción 3 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OPCION 3"
                    android:textColor="#F5F5F5"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etOpcion3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#F5F5F5"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="#1A1A2E"
                    android:textSize="14sp"
                    android:hint="Escribe la opción 3"
                    android:textColorHint="#80000000"
                    android:layout_marginBottom="24dp" />

                <!-- Campo Opción 4 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OPCION 4"
                    android:textColor="#F5F5F5"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etOpcion4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#F5F5F5"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="#1A1A2E"
                    android:textSize="14sp"
                    android:hint="Escribe la opción 4"
                    android:textColorHint="#80000000"
                    android:layout_marginBottom="24dp" />

                <!-- Campo Respuesta Correcta -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RESPUESTA CORRECTA"
                    android:textColor="#F5F5F5"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etRespuestaCorrecta"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#F5F5F5"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="#1A1A2E"
                    android:textSize="14sp"
                    android:hint="Número de la respuesta correcta (1-4)"
                    android:textColorHint="#80000000"
                    android:inputType="number"
                    android:layout_marginBottom="24dp" />

                <!-- Campo Dificultad -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DIFICULTAD"
                    android:textColor="#F5F5F5"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etDificultad"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#F5F5F5"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="#1A1A2E"
                    android:textSize="14sp"
                    android:hint="Nivel de dificultad (1-3)"
                    android:textColorHint="#80000000"
                    android:inputType="number"
                    android:layout_marginBottom="32dp" />

                <!-- Botones Enviar y Listar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp">

                    <Button
                        android:id="@+id/btnEnviar"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="ENVIAR"
                        android:textColor="#F5F5F5"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:background="#E94560"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="sans-serif-black" />

                    <Button
                        android:id="@+id/btnListar"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="LISTAR"
                        android:textColor="#1A1A2E"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:background="#F3C023"
                        android:layout_marginStart="8dp"
                        android:fontFamily="sans-serif-black" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <!-- Barra inferior de navegación -->
        <LinearLayout
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="#E94560"
            android:padding="8dp"
            android:paddingBottom="56dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnAddQuestion"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Añadir"
                android:textColor="#F5F5F5"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="#0F3460"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/btnFacil"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Fácil"
                android:textColor="#1A1A2E"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="#F3C023"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/btnMedio"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Medio"
                android:textColor="#1A1A2E"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="#F3C023"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/btnDificil"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Difícil"
                android:textColor="#1A1A2E"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="#F3C023"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/btnStats"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Stats"
                android:textColor="#F5F5F5"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="#0F3460"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>